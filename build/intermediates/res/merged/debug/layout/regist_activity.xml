<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rejist_bg"
    >
    <ImageView
        android:layout_marginTop="@dimen/y8"
        android:id="@+id/rejist_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_bg"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/y70"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/newuser_num_et"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y40"
            android:textSize="@dimen/x15"
            android:textColor="#646519"
            android:textColorHint="#646519"
            android:hint="@string/new_usernum"
            android:background="@drawable/edittext_bg"/>
        <EditText
            android:layout_below="@id/newuser_num_et"
            android:textSize="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:id="@+id/newuser_pwd_et"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y40"
            android:textColor="#646519"
            android:textColorHint="#646519"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:hint="@string/new_userpwd"/>
        <EditText
            android:layout_below="@id/newuser_pwd_et"
            android:textSize="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:id="@+id/newuser_name_et"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y40"
            android:textColor="#646519"
            android:textColorHint="#646519"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:hint="@string/new_username"/>
        <EditText
            android:layout_below="@id/newuser_name_et"
            android:textSize="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            android:id="@+id/newuser_phone_et"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y40"
            android:textColor="#646519"
            android:textColorHint="#646519"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:hint="@string/new_userphone"/>
        <Button
            android:id="@+id/rejist_btn"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y40"
            android:text="@string/rejist"
            android:layout_below="@id/newuser_phone_et"
            android:background="@drawable/rejist_btn_bg"
            android:textSize="@dimen/x15"
            android:layout_marginTop="@dimen/y10"
            />

    </RelativeLayout>


</LinearLayout><!-- From: file:/G:/AndroidStuidoDemo/MyApplication/smilefood/src/main/res/layout/regist_activity.xml -->
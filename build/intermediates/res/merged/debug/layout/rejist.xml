<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="#fec24d"
        >
        <ImageView
            android:id="@+id/id_back_img"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y30"
           android:layout_centerVertical="true"
            android:src="@drawable/back_bg"
            android:layout_marginLeft="@dimen/y5"/>
        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_centerHorizontal="true"
            android:id="@+id/id_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x20"
            android:text="用户注册"/>
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TableRow
            android:layout_marginTop="@dimen/y30"
            android:gravity="center"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            />
        <EditText
            android:id="@+id/id_newusernum_et"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y30"
            />
    </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_userpwd"
                />
            <EditText
                android:id="@+id/id_newuserpwd_et"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y30"
                android:inputType="numberPassword"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                />
            <EditText
                android:id="@+id/id_againpwd_et"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y30"
                android:inputType="numberPassword"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_username"
                />
            <EditText
                android:id="@+id/id_newusername_et"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y30"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/y10"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_userphone"
                />
            <EditText
                android:id="@+id/id_newuserphone_et"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y30"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/y10"
            android:gravity="center">
            <Button
                android:id="@+id/id_rejist_btn"
                android:text="@string/rejist"
                android:background="@drawable/button_bg"/>
        </TableRow>
    </TableLayout>
</LinearLayout><!-- From: file:/G:/AndroidStuidoDemo/MyApplication/smilefood/src/main/res/layout/rejist.xml -->
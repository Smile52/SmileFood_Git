<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="@dimen/x13"
    card_view:cardElevation="20dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    card_view:contentPadding="5dp"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fooditeam_bg">
    <ImageView
        android:id="@+id/foodimg_img"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y80" />
    <TextView
        android:id="@+id/foodname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/foodimg_img"
        android:text="菜名"
        android:textSize="@dimen/x20"
        android:layout_marginLeft="@dimen/x10"/>

    <TextView
        android:id="@+id/foodcount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/foodimg_img"
        android:layout_marginLeft="@dimen/x10"
        android:layout_below="@id/foodname_tv"
        android:text="已点数量"
        android:layout_marginTop="@dimen/y20"

        />
    <TextView
        android:id="@+id/foodprice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodcount_tv"
        android:text="价格"
        android:layout_toRightOf="@id/foodimg_img"
        android:layout_marginLeft="@dimen/x100"
        android:textSize="@dimen/x18"
        android:textColor="#ff7e0b"
        />

</RelativeLayout>
</android.support.v7.widget.CardView>
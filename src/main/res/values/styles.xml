<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="MyTheme" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/x30</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowsTitleBackground</item>
    </style>

    <style name="WindowsTitleBackground">
        <item name="android:background">@color/Title_bg</item>
    </style>

    <style name="Transparent" parent="@android:style/Theme.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottom_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dip</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
